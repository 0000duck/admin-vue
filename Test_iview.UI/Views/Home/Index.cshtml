@{
    ViewBag.Title = "Home Page";
}

<div id="app">
    <i-button v-on:click="show">Click me!</i-button>
    <Modal v-model="visible" title="Welcome">欢迎使用 iView</Modal>
</div>

@section scripts{
    <script>
        var app = new Vue({
            el: '#app',
            data: {
                visible: false
            },
            methods: {
                show: function () {
                    this.visible = true;
                }
            }
        })
    </script>
}